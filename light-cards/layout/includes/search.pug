#search-modal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5.modal-title= __('search')
        button.close(data-dismiss="modal", aria-label="Close")
          span &times;
      .modal-body
        .row
          .col-md-12
            input.form-control(onkeyup="search(this)")
        .row.mt-3
          .col-md-12#search-results